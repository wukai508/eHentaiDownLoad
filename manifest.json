{
  "manifest_version": 3,
  "name": "E-Hentai Downloader",
  "version": "1.0.0",
  "description": "下载 E-Hentai 漫画的 Chrome 插件，支持直接下载和打包下载",
  "author": "eHentaiDownload",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "E-Hentai Downloader - 点击打开"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://e-hentai.org/*",
    "*://*.hath.network/*",
    "*://*.hath.network:*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://e-hentai.org/g/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*",
        "page/*"
      ],
      "matches": [
        "*://e-hentai.org/*"
      ]
    }
  ]
}